<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="vn.asiantech.internship.ui.service.MusicActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerviewMusic"
        android:layout_width="match_parent"
        android:layout_height="500dp" />

    <LinearLayout
        android:id="@+id/llToolMusic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnPreviousMusic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_skip_previous_black_24dp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnPlayMusic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_play_pause"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnNextMusic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_skip_next_black_24dp"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tv_name_music"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvSingle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tv_single"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
