<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="user"
            type="vn.asiantech.internship.databinding.User" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/ic_bg_header_info"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tv_preview_info"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:imageUrl="@{user.url}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:gravity="center"
                android:text="@{user.name}"
                android:textColor="@color/colorWhite"
                android:textSize="25sp"
                tools:ignore="Deprecated" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edt_email_edit_info"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_edt_number"
                android:editable="false"
                android:gravity="center"
                android:text="@{user.email}"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                tools:ignore="Deprecated" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_birth_day"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edtBirthday"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_edt_number"
                        android:editable="false"
                        android:gravity="center"
                        android:text="@{user.birthDay}"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"
                        tools:ignore="Deprecated" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_gender"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_edt_number"
                        android:gravity="center"
                        android:text="@{user.getValueToGender}"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"
                        tools:ignore="Deprecated" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edt_phone_edit_info"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edtContactNumber"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_edt_number"
                android:editable="false"
                android:gravity="center"
                android:text="@{user.contactNumber}"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                tools:ignore="Deprecated" />

        </LinearLayout>
    </LinearLayout>
</layout>
