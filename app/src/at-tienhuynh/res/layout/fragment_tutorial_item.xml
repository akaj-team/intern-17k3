<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLoginScreen">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgHeaderAvatar"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitXY"
                tools:src="@drawable/ic_header_avatar_1" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgHeaderAvatar"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorBlue300"
                android:textSize="30dp"
                android:textStyle="bold"
                tools:text="Title" />

            <TextView
                android:id="@+id/tvContain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16dp"
                tools:text="contain contain contain" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tvContain"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgNextTutor"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_next_tutorial"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnJoinUs"
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ic_btn_join_us"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:text="@string/tv_tutorial_join_us"
                    android:textColor="@color/colorBlue100" />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
