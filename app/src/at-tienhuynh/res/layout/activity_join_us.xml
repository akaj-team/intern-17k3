<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="vn.asiantech.internship.loginkotlintutorial.ui.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBackJoinUs"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_blue" />

        <TextView
            android:id="@+id/tvNextJoinUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/tv_next_login"
            android:textColor="@color/colorBlue100"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_join_us"
            android:textColor="@android:color/black"
            android:textSize="50dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tv_title_join_us"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="12dp">

            <EditText
                android:id="@+id/edtNameJoinUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/bg_bottom_line_edt"
                android:hint="@string/hint_edt_name_join_us"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorBlue100"
                android:textCursorDrawable="@drawable/bg_cursor_edt" />

            <EditText
                android:id="@+id/edtEmailJoinUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/bg_bottom_line_edt"
                android:hint="@string/hint_edt_email_join_us"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorBlue100"
                android:textCursorDrawable="@drawable/bg_cursor_edt" />

            <EditText
                android:id="@+id/edtPassJoinUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/bg_bottom_line_edt"
                android:hint="@string/hint_edt_password_login"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorBlue100"
                android:textCursorDrawable="@drawable/bg_cursor_edt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
