<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="vn.asiantech.internship.ui.main.MainActivity">

    <TextView
        android:id="@+id/tvMenuBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="@string/menu_bai_tap"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMenuBt"
        android:text="@string/bai_tap_1" />

    <Button
        android:id="@+id/btnBt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBt1"
        android:text="@string/bai_tap_2" />

    <Button
        android:id="@+id/btnBt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBt2"
        android:text="@string/bai_tap_3" />

    <Button
        android:id="@+id/btnBt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBt3"
        android:text="@string/bai_tap_4" />

    <Button
        android:id="@+id/btnBt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBt4"
        android:text="@string/bai_tap_5" />

    <Button
        android:id="@+id/btnBt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvMenuBt"
        android:text="@string/bai_tap_6" />

    <Button
        android:id="@+id/btnBt7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnBt6"
        android:text="@string/bai_tap_7" />
</RelativeLayout>
