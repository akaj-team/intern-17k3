<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="30dp">

    <TextView
        android:id="@+id/tvEnter"
        style="@style/boldText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/enter_your"
        android:textSize="17dp" />

    <LinearLayout
        android:id="@+id/lnPhone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tvEnter"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_australia" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="13dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/ic_drop_down" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_gray_bottom_line"
            android:hint="@string/enter_number"
            android:inputType="phone"
            android:textCursorDrawable="@drawable/bg_gray_cursor"
            android:textSize="17dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edtFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnPhone"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_gray_bottom_line"
        android:gravity="center_vertical"
        android:hint="@string/full_name"
        android:textCursorDrawable="@drawable/bg_gray_cursor"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtFullName"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_gray_bottom_line"
        android:gravity="center_vertical"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@drawable/bg_gray_cursor"
        android:textSize="17dp" />

    <LinearLayout
        android:id="@+id/lnCheck"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/edtEmail"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chkSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:button="@drawable/selector_chk_term_service"
            android:scaleX="2"
            android:scaleY="2" />

        <TextView
            android:id="@+id/tvLinkSp"
            android:text="@string/string_change_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="8dp"
            android:textSize="16dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgNext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/lnCheck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_event_next" />
</RelativeLayout>
