<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">

    <TextView
        android:id="@+id/twWelCome"
        style="@style/boldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="@string/welcome" />

    <Button
        android:id="@+id/btnLogIn"
        style="@style/loginFb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twWelCome"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_cornice_log_in_fb"
        android:text="@string/login_fb"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btnLogIn"
        android:layout_gravity="center"
        android:gravity="center">

        <View
            android:id="@+id/viewLineLeft"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/twOr"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/twOr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:text="@string/or"
            android:textSize="15sp" />

        <View
            android:id="@+id/viewLineRight"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/twOr"
            android:background="@android:color/darker_gray" />


    </RelativeLayout>

    <Button
        android:id="@+id/btnLogIn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl"
        android:background="@drawable/bg_cornice_log_in_pn"
        android:text="@string/login_pn"
        android:textStyle="bold"
        android:textColor="@color/colorBlue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@id/btnLogIn2"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="@string/new_to"
            android:gravity="right|center"
            style="@style/blackText"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:text="@string/sign_up"
            android:textColor="@color/colorBlue"/>
    </LinearLayout>

</RelativeLayout>