<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.asiantech.internship">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ExerciseActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.recyclerview.RecyclerViewActivity" />
        <activity android:name=".ui.calculator.CalculatorActivity" />
        <activity android:name=".ui.drawerlayout.DrawerActivity" />
        <activity android:name=".ui.savedata.SharePreferenceActivity" />
        <activity android:name=".ui.savedata.ExternalStorageActivity" />
        <activity android:name=".ui.savedata.SQLiteActivity" />
        <activity android:name=".ui.savedata.CompanyActivity" />
        <activity android:name=".ui.savedata.SaveDataActivity" />
        <activity android:name=".ui.loadimage.ImageLoaderActivity" />
        <activity android:name=".ui.loadimage.NinePathActivity" />
        <activity android:name=".ui.loadimage.ImageVectorActivity" />
        <activity android:name=".ui.viewpager.SliderActivity" />
        <activity android:name=".ui.viewpager.TabLayoutActivity" />
        <activity android:name=".ui.asynchronous.activitys.ThreadHandleActivity" />
        <activity android:name=".ui.asynchronous.activitys.AsynchronousActivity" />
        <activity android:name=".ui.asynchronous.activitys.CountDownTimerActivity" />
        <activity android:name=".ui.canvas.CanvasActivity" />
        <activity android:name=".ui.unittest.UnitTestActivity" />
        <activity android:name=".ui.databinding.PreviewProfileActivity" />
        <activity android:name=".ui.databinding.EditProfileActivity" />
        <activity android:name=".ui.viewpager.broadcast.BroadCastReceiverActivity" />
        <activity android:name=".ui.viewpager.service.MusicActivity" />

        <service
            android:name=".ui.viewpager.service.service.MediaService"
            android:enabled="true"
            android:exported="true"
            android:permission="@string/service" />
        <receiver
            android:name=".ui.viewpager.service.broadcast.NotificationBroadcast"
            android:permission="@string/notification">
            <intent-filter>
                <action android:name="delete" />
                <action android:name="pause" />
                <action android:name="next" />
                <action android:name="play" />
                <action android:name="previous" />
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
