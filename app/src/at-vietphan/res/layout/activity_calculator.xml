<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical"
    tools:context="vn.asiantech.internship.CalculatorActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <EditText
            android:id="@+id/edtNumA"
            android:layout_width="148dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_number_text_view"
            android:hint="Input num A..." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="+" />

        <EditText
            android:id="@+id/edtNumB"
            android:layout_width="148dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_number_text_view"
            android:hint="Input num B..." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCong"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="+"/>
        <Button
            android:id="@+id/btnTru"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="-"/>
        <Button
            android:id="@+id/btnNhan"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="*"/>
        <Button
            android:id="@+id/btnChia"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="/"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvResult"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"/>
</LinearLayout>
