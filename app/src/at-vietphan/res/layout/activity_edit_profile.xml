<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="profileUser"
            type="vn.asiantech.internship.models.ProfileUser" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_mp3"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/edit_profile"
                android:textColor="@android:color/white" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgAvatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="1dp"
                app:imageUrl="@{profileUser.imageUrl}"
                tools:src="@drawable/bg_header_mp3" />

            <vn.asiantech.internship.utils.MyEditTextWhileClear
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:afterTextChanged="@{(text)->profileUser.afterTextChange(text,0)}"
                android:background="@drawable/bg_bottom_line_edt_data_binding"
                android:inputType="text"
                android:padding="@dimen/edt_tv_btn_padding"
                android:text="@{profileUser.name}"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/e_mail" />

                <vn.asiantech.internship.utils.MyEditTextGreyClear
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:afterTextChanged="@{(text)->profileUser.afterTextChange(text,1)}"
                    android:background="@drawable/bg_number_text_view"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/edt_tv_btn_padding"
                    android:text="@{profileUser.email}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="20dp"
                            android:text="@string/birth_date" />

                        <EditText
                            android:id="@+id/edtBirthDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:afterTextChanged="@{(text)->profileUser.afterTextChange(text, 2)}"
                            android:drawableRight="@drawable/ic_expand_more_grey_800_18dp"
                            android:inputType="date"
                            android:onClick="@{()->profileUser.onShowDatePickerDialogClick(edtBirthDate)}"
                            android:padding="@dimen/edt_tv_btn_padding"
                            android:text="@{profileUser.birthDate}" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="20dp"
                            android:text="@string/gender" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_number_text_view">

                            <Spinner
                                android:id="@+id/spnGender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/gender"
                                android:padding="@dimen/edt_tv_btn_padding"
                                android:selectedItemPosition="@={profileUser.genDer}"
                                android:spinnerMode="dropdown" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/contact_number" />

                <vn.asiantech.internship.utils.MyEditTextGreyClear
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:afterTextChanged="@{(text)->profileUser.afterTextChange(text,3)}"
                    android:background="@drawable/bg_number_text_view"
                    android:inputType="phone"
                    android:padding="@dimen/edt_tv_btn_padding"
                    android:text="@{profileUser.phone}" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:onClick="@{()->profileUser.onUpdateProfileClick(context)}"
                    android:padding="@dimen/edt_tv_btn_padding"
                    android:text="@string/submit" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
