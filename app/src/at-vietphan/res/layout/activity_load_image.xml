<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <Button
        android:id="@+id/btnDrawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/drawable" />

    <Button
        android:id="@+id/btnAssets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/assets" />

    <Button
        android:id="@+id/btnStorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/storage" />

    <Button
        android:id="@+id/btnInternet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/internet" />
    <Button
        android:id="@+id/btnNinePath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nine_path" />

    <ImageView
        android:id="@+id/imgPicasso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_like_checked" />
</LinearLayout>
