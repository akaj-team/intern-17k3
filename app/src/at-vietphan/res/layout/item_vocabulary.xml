<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="50dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgFlagFirst"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_flag_en" />

            <TextView
                android:id="@+id/tvCountryFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                tools:text="English" />

            <ImageView
                android:id="@+id/imgAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@drawable/bear" />

            <TextView
                android:id="@+id/tvCountrySecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                tools:text="Vietnamese" />

            <ImageView
                android:id="@+id/imgFlagSecond"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_flag_vi" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
