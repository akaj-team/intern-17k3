<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_text_button_facebook"
    android:orientation="vertical"
    tools:context="vn.asiantech.internship.ui.Login.LoginFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/text_subject_login"
        android:textColor="@color/color_text_subject_login"
        android:textSize="14dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnLoginFacebook"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_button_facebook"
        android:text="@string/text_button_login_facebook"
        android:textColor="@color/color_text_button_facebook"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/color_text_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/text_or"
            android:textColor="@color/color_text_subject_login"
            android:textSize="15dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/color_text_view" />
    </LinearLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_bottom_gray_border"
        android:text="@string/text_button_login_phonenum"
        android:textColor="@color/color_button_phone"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_new_urbi"
            android:textColor="@color/color_text_subject_login" />
    </LinearLayout>
</LinearLayout>
