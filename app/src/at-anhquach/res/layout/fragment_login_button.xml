<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.asiantech.internship.ui.login.LoginButtonFragment"
    android:orientation="vertical"
    android:padding="30dp"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcom"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnLoginFB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_loginfb"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:text="@string/bntLoginFb"
        android:textColor="@color/colorTextWhite"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorTextBlack"
            android:textSize="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/colorTextBlack"
            android:textSize="2dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnLogNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_loginnumb"
        android:text="@string/bntLoginNumb"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:textColor="@color/colorTextBlue"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/memoLogin"
            android:textColor="@color/colorTextBlack"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/memoLogin2"
            android:textColor="@color/colorTextBlue"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>
