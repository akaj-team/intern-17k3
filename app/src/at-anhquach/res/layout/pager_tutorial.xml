<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llContentTutor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewContentTutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="35dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgTutor"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_tutor_pager1" />

            <TextView
                android:id="@+id/tvTutorTittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgTutor"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textColor="@color/colorBlue300"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvTutorContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTutorTittle"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textAlignment="center"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tvTutorContent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgNextTutor"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_next_tutor" />

                <Button
                    android:id="@+id/btnJoinUs"
                    android:layout_width="260dp"
                    android:layout_height="80dp"
                    android:background="@drawable/img_bg_btn_join_us"
                    android:paddingBottom="25dp"
                    android:text="@string/tv_join_us"
                    android:textColor="@color/colorBlue50"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
